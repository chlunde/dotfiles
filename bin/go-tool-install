#!/bin/bash

set -e

export GOPATH=~/opt/gotoolpath

test -d $GOPATH/ || mkdir -p $GOPATH
test -d ~/bin || mkdir -p ~/bin

if ! [[ -L $GOPATH/bin ]]
then
    ln -s ~/bin/ $GOPATH/bin
fi

export GO111MODULE=on

if [[ $# == 0 ]]
then
    go get golang.org/x/tools/gopls@latest
    go get github.com/junegunn/fzf@latest
    go get golang.org/x/tools/cmd/goimports@latest
    go get golang.org/x/tools/cmd/gorename@latest
    go get golang.org/x/lint/golint@latest
    go get honnef.co/go/tools/cmd/staticcheck@latest
    go get github.com/cweill/gotests/gotests@v1.5.3
    go get github.com/rogpeppe/gohack@latest
else
    go $@
fi

go clean -cache
go clean -testcache
go clean -modcache
